---
import BaseLayout from '../layouts/BaseLayout.astro';
import { site } from '../data/site'

const title = 'About';
const description = `About ${site.author}.`
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="about-container">
    <div class="about-copy">
      <h1>About</h1>
      <p>
        Iâ€™m {site.author}. I like turning messy problems into systems that are
        simple to operate, easy to change, and hard to break.
      </p>
      <p>
        This blog is where I share notes on engineering, AI tooling, and the
        tradeoffs you only see once you ship. If you want the best place to
        start, read
        <a href="/blog/castle-of-sand">Castles Built on Sand</a>.
      </p>
      <p>
        Links:
        <a href={site.social.github} target="_blank" rel="noopener">GitHub</a>,
        <a
          href={site.social.linkedin}
          target="_blank"
          rel="noopener"
        >
          LinkedIn
        </a>
        .
      </p>
    </div>

    <div class="about-image-container">
      <img
        class="about-image"
        src="/assets/about-illustration.webp"
        alt="A desk setup with monitors, keyboard, and headphones"
        width="520"
        height="290"
        loading="lazy"
        decoding="async"
      >
    </div>
  </div>
</BaseLayout>

<style>
  .about-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .about-copy {
    flex: 1;
    padding: 0 1em;
  }

  .about-copy p {
    font-size: 1.4em;
  }

  .about-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .about-image {
    border-radius: 8px;
    height: auto;
    max-width: 520px;
    width: 100%;
  }

  @media (max-width: 800px) {
    .about-container {
      flex-direction: column;
    }

    .about-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
